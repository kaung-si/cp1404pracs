BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 60
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_change(1)
            Button:
                text: 'Down'
                on_press: app.handle_change(-1)
    Button:
        text: 'Convert miles to kilometer'
        on_press: app.handle_calculate()
    Label:
        id: output_km
        text: app.result_km
        font_size: 64
        color: (1, 1, 0, 1)